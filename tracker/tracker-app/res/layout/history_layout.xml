<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools" style="@style/mm"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:background="@color/background_color" android:orientation="vertical"
	tools:context=".activity.MainActivity_">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:padding="5dp"
        android:useDefaultMargins="true" >

        <TextView
            android:id="@+id/history_header_left"
            android:layout_column="0"
            android:layout_gravity="right|center_vertical"
            android:layout_row="0"
            android:text="@string/header_distance" />

        <TextView
            android:id="@+id/history_row_left"
            android:layout_column="0"
            android:layout_gravity="right|center_vertical"
            android:layout_row="2"
            android:text="@string/startValue" />

        <TextView
            android:id="@+id/history_header_center"
            android:layout_column="1"
            android:layout_gravity="right|center_vertical"
            android:layout_row="0"
            android:text="@string/header_time" />

        <TextView
            android:id="@+id/history_row_center"
            android:layout_column="1"
            android:layout_gravity="right|center_vertical"
            android:layout_row="2"
            android:text="@string/startTime" />

        <TextView
            android:id="@+id/history_header_right"
            android:layout_column="2"
            android:layout_gravity="right|center_vertical"
            android:layout_row="0"
            android:text="@string/header_calories" />

        <TextView
            android:id="@+id/history_row_right"
            android:layout_column="2"
            android:layout_gravity="right|center_vertical"
            android:layout_row="2"
            android:text="@string/startValue" />

    </GridLayout>

    <ExpandableListView
        android:id="@+id/historyList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ExpandableListView>

</LinearLayout>