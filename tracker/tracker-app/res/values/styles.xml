<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/blue_gradient</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="ww">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="mw">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wm">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="mm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Main layout -->
    <style name="ww.mainLabel">
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:textSize">@dimen/xxl_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="ww.subLabel">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textSize">@dimen/label_large_text_size</item>
    </style>

    <!-- Etykieta treningu -->
    <style name="ww.workoutLabel">
        <item name="android:drawablePadding">@dimen/label_drawable_padding</item>
        <item name="android:textSize">@dimen/label_text_size</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Wartosc etykiety treningu -->
    <style name="ww.workoutValue">
        <item name="android:layout_marginRight">@dimen/value_margin_right</item>
        <item name="android:textSize">@dimen/label_large_text_size</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <!-- Jednostka etykiety treningu -->
    <style name="ww.workoutValue.label">
        <item name="android:textSize">@dimen/label_text_size</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <!-- Wartosc przed jednostka -->
    <style name="ww.workoutValue.label.left">
        <item name="android:textSize">@dimen/label_large_text_size</item>
        <item name="android:layout_alignParentRight">false</item>
        <item name="android:layout_marginRight">@dimen/value_label_margin_right</item>
    </style>

    <style name="ww.colorButton">
        <item name="android:paddingBottom">@dimen/button_vertical_padding</item>
        <item name="android:paddingTop">@dimen/button_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/button_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/button_horizontal_padding</item>
        <item name="android:shadowRadius">@integer/button_shadow_radius</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/button_label_size</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>
    
    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
<!--         <item name="android:background">@drawable/tab_indicator</item> -->
<!--         <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item> -->
        <item name="android:textColor">#FF555555</item>
        <item name="android:textSize">16sp</item>
<!--         <item name="android:divider">@drawable/custom_tab_indicator_divider</item> -->
        <item name="android:dividerPadding">10dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

</resources>